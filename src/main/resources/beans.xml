<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="actor1" class="com.stackroute.domain.Actor">

        <constructor-arg name="name" value="Shirley Watson"></constructor-arg>
        <constructor-arg name="gender" value="female"></constructor-arg>
        <constructor-arg name="age" value="20"></constructor-arg>

    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">

        <constructor-arg name="name" value="Tom Stuart"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg name="age" value="18"></constructor-arg>

    </bean>


    <bean id="actor3" class="com.stackroute.domain.Actor">

        <constructor-arg name="name" value="Morris Wilson"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg name="age" value="28"></constructor-arg>

    </bean>

    <bean name="MovieA, MovieB" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor1"></constructor-arg>
    </bean>

    <bean id="movie1" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor2"></constructor-arg>
    </bean>

    <bean id="movie2" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor3"></constructor-arg>
    </bean>


</beans>